{
  "manifest_version": 3,
  "name": "GCR Downloader",
  "version": "1.0",
  "description": "Scan & download files from Google Classroom.",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Scan Drive Links",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "permissions": [ "downloads", "scripting", "activeTab" ],
  "host_permissions": [ "https://classroom.google.com/*", "https://drive.google.com/*" ]
}